<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <!-- top function label -->
    <style name="topFunctionLabel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/top_function_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">50dp</item>
    </style>

    <!-- bottom function label -->
    <style name="bottomFunctionLabel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/bottom_function_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">50dp</item>
    </style>

    <!-- normal function label -->
    <style name="normalFunctionLabel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/normal_function_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">50dp</item>
    </style>

</resources>