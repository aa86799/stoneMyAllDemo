<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" 
                android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <solid android:color="@color/focus_back" />
            <stroke android:color="@color/focus_back" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" 
                android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <solid android:color="@color/selected_back" />
            <stroke android:color="@color/selected_back" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" 
                android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <solid android:color="@color/normal_back" />
            <stroke android:color="@color/normal_back" />
        </shape>
    </item>

</selector>